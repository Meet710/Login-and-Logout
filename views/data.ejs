<!DOCTYPE html>
<html>
<head>
	<title>List</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js">
	</script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	
	<style>
        .table {
            margin: 50px;
        }

        h1 {
            text-align: center;
        }

        table {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td,
        th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #ddd;
        }

        th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #04AA6D;
            color: white;
        }
  
        div {
            border-radius: 5px;
            background-color: white;
            padding: 20px;
        }
		#logout{
            height: 35px;
            margin-left: 650px;
        }
    </style>
</head>
<body>
	<h1>List of Data</h1>
	
   <div>
	<%if(data) {%> 
		<table>
			<tr>
				<th>SNo.</th>
				<th>Name</th>
				<th>UserName</th>
				<th>Email</th>
				<th>DOB</th>
                <th>Role</th>
				<th>Address</th>
				<th>Delete</th>
			</tr>
			<%data.forEach((item,index)=>{%>
				<tr>
					<td><%=index +1%></td>
					<td><%=item.name%></td>
					<td><%=item.username%></td>		
					<td><%=item.email%></td>
					<td><%=item.DateofBirth%></td>
                    <td><%=item.role%></td>
					<td><%=item.Address%></td>
					<td><a href="/delete/<%=item.email%>"><button type="button"class="btn btn-danger">Delete</button></a></td>
				</tr>  
			<%})%>
		</table>
	<%} else {%> 
		<h3>No Data Available</h3>    
	<%} %>
</div>
  </div>
		<div class="abc">
			<a href="/logout"><button type="button" class="btn btn-primary" id="logout">logout</button></a>
		</div>
	</div>
</body>
</html>